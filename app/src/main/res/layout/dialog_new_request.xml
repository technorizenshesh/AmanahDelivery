<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@color/color_gray_100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_logo"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/tvRefuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/refuse"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp" />


            <TextView
                android:id="@+id/tvAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="@string/accept"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/header"
            android:layout_above="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/red">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Customer_dev_address"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_13sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tvPickupLoc"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1, Thrale Street,\n London, SE19HW, UK"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_margin="@dimen/_10sdp">

                <ProgressBar
                    android:id="@+id/progressBarCircle"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/drawable_circle_dark_blue"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/drawable_circle_yellow"
                    android:rotation="-90" />

                <TextView
                    android:id="@+id/textViewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="00.01"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_13sdp"/>

            </RelativeLayout>

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/store_address"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvDestinationLoc"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ealing Broadway Shopping \n Centre, London, W55JY, UK"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textAllCaps="false" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="@color/btn_yello_color">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:progressTint="@color/white"
                android:isIndicator="true"
                android:rating="2"/>

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="pap aya"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="@dimen/_5sdp"
                />


        </RelativeLayout>
    </RelativeLayout>
</layout>